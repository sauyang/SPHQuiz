<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextView Style for SSTextView-->

    <style name="SS.Label" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_body_2</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="customFont">@string/FontLight</item>
    </style>

    <style name="SS.Label.Bold" parent="SS.Label">
        <item name="customFont">@string/FontBold</item>
    </style>

    <style name="SS.Label.Header" parent="SS.Label">
        <item name="android:textSize">@dimen/text_size_header_3</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SS.Label.NormalBig" parent="SS.Label">
        <item name="android:textSize">@dimen/text_size_body_1</item>
        <item name="android:textColor">@color/text_dark_grey_color</item>
    </style>
    <style name="SS.Label.NormalBigBold" parent="SS.Label">
        <item name="customFont">@string/FontBold</item>
        <item name="android:textSize">@dimen/text_size_body_1</item>
        <item name="android:textColor">@color/text_dark_grey_color</item>
    </style>

    <style name="Button.Positive" parent="android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_button_positive</item>
    </style>


</resources>
